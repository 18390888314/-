    <title>Signin Template for Bootstrap</title>
    <link href="css/bootstrap.css" rel="stylesheet">
    <script src="js/jquery-3.2.1.js"></script>
<style>
    *{margin:0px;paading:0px;font-size:20px;}
    body{background:#cccccc;}
</style>
</head>

<body>

<div class="container col-lg-4 col-lg-offset-4">


        <h2 class="form-signin-heading">注册</h2>
        <label for="inputEmail" class="sr-only">用户名</label>
        <input type="text" id="inputName" class="form-control" placeholder="用户名" name="username" required autofocus>
        <label for="inputPassword" class="sr-only">密码</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="密码至少6位" name="password" required>
        <div class="checkbox">
        </div>
        <button class="btn btn-lg btn-primary btn-block">注册</button>


</div> <!-- /container -->
</body>
</html>
<script type="text/javascript">
    $(".btn").click(function () {
        $.post("/doregister",{
            "username":$("#inputName").val(),
            "password":$("#inputPassword").val(),
        },function(result) {
            if(result=="-1"){
                $("#inputName").val("");
                $("#inputPassword").val("");
                alert("注册失败,用户名已存在或密码位数错误");

                return;
            }
            if(result=="-2"){
                alert("服务器错误");
            }
            if(result=="1"){
                window.location.href="/";
                alert("注册成功");

            }
        })
    });
</script>
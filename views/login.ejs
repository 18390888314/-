<body>

<div class="container col-lg-4 col-lg-offset-4">


    <h2 class="form-signin-heading">登录</h2>
    <label for="inputEmail" class="sr-only">用户名</label>
    <input type="text" id="inputName" class="form-control" placeholder="用户名" name="username" required autofocus>
<label for="inputPassword" class="sr-only">密码</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="密码" name="password" required>
<div class="checkbox">
    </div>
    <button class="btn btn-lg btn-primary btn-block">登录</button>


    </div> <!-- /container -->
</body>
</html>
<script type="text/javascript">
    $(".btn").click(function () {
        $.post("/dologin",{
            "username":$("#inputName").val(),
            "password":$("#inputPassword").val(),
        },function(result) {
            if(result=="-1"){
                $("#inputName").val("");
                $("#inputPassword").val("");
                alert("登录失败,用户名不存在或密码错误");

                return;
            }
            if(result=="-2"){
                alert("服务器错误");
            }
            if(result=="1"){
                window.location.href="/";
                alert("登录成功");

            }
        })
    });
</script>